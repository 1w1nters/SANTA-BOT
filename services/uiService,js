import { EmbedBuilder, ActionRowBuilder, ButtonBuilder, ButtonStyle } from 'discord.js';

class UiService {
  async sendDashboard(channel) {
    // –¢–µ–∫—Å—Ç —Å–æ–æ–±—â–µ–Ω–∏—è —Å –∫–≤–µ—Å—Ç–∞–º–∏
    const embed = new EmbedBuilder()
      .setTitle('üéÑ –û–ø–µ—Ä–∞—Ü–∏—è: –°–ø–∞—Å—Ç–∏ –°–∞–Ω—Ç—É | –ü–∞–Ω–µ–ª—å –ò–≥—Ä–æ–∫–∞')
      .setDescription(
        `
**–ö–∞–∫ —Å–¥–∞—Ç—å –æ—Ç—á–µ—Ç?**
1. –í—ã–±–µ—Ä–∏ –∫–≤–µ—Å—Ç –∏–∑ —Å–ø–∏—Å–∫–∞.
2. –ñ–º–∏ –∫–Ω–æ–ø–∫—É **"–û—Å—Ç–∞–≤–∏—Ç—å –æ—Ç—á–µ—Ç"** –Ω–∏–∂–µ.
3. –í—Å—Ç–∞–≤—å —Å—Å—ã–ª–∫—É –Ω–∞ —Å–∫—Ä–∏–Ω (Imgur/Lightshot) –∏–ª–∏ —é–∑–∞–π –∫–æ–º–∞–Ω–¥—É \`/report\`, –µ—Å–ª–∏ —Ö–æ—á–µ—à—å –∫–∏–Ω—É—Ç—å —Ñ–∞–π–ª.

**–°–ø–∏—Å–æ–∫ –∫–≤–µ—Å—Ç–æ–≤:**
1. –ò—Å—á–µ–∑–Ω–æ–≤–µ–Ω–∏–µ –°–∞–Ω—Ç—ã
2. –¢–µ–ª–µ–ø–æ—Ä—Ç –≤ –±–µ–¥–µ
3. –ü–æ—Ç–µ—Ä—è–Ω–Ω—ã–π —Å–ø–∏—Å–æ–∫
... (–≤–µ—Å—å —Ç–≤–æ–π —Å–ø–∏—Å–æ–∫)
`
      )
      .setColor(0xe74c3c) // –ö—Ä–∞—Å–Ω—ã–π –Ω–æ–≤–æ–≥–æ–¥–Ω–∏–π
      .setImage('https://i.imgur.com/K7lQ6oG.png') // –¢–≤–æ–π –±–∞–Ω–Ω–µ—Ä
      .setFooter({ text: 'Santa Corp Systems' });

    // –ö–Ω–æ–ø–∫–∞
    const row = new ActionRowBuilder().addComponents(
      new ButtonBuilder()
        .setCustomId('start_report')
        .setLabel('üìÇ –û—Å—Ç–∞–≤–∏—Ç—å –æ—Ç—á–µ—Ç')
        .setStyle(ButtonStyle.Success) // –ó–µ–ª–µ–Ω–∞—è –∫–Ω–æ–ø–∫–∞
        .setEmoji('üéÖ')
    );

    await channel.send({ embeds: [embed], components: [row] });
  }
}

export default new UiService();